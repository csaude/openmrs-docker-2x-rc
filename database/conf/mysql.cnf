# Generated MySQL Configuration (based on 16.0 GiB memory, deployment type: container):
# Configuration generated on: 2024/11/13 - 13:16:05
[mysqld]
init_connect='SET collation_connection = utf8mb4_0900_ai_ci; SET NAMES utf8mb4'
sql_mode="STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"
character-set-server=utf8mb4
#character-set-client-handshake=FALSE
collation-server=utf8mb4_0900_ai_ci
datadir=/var/lib/mysql

#--------- InnoDB Configuration ---------
innodb_buffer_pool_size=12G
innodb_log_buffer_size=64M
innodb_write_io_threads=8
innodb_flush_log_at_trx_commit=2
innodb_buffer_pool_instances=12
innodb_redo_log_capacity=3G
innodb_flush_method=fsync

#--------- Table Cache Configuration ---------
table_open_cache=1638
table_definition_cache=409

#--------- Connection Configuration ---------
max_connections=1638
wait_timeout=600
interactive_timeout=600

#--------- Temporary Tables Configuration ---------
tmp_table_size=256M
max_heap_table_size=256M

#--------- Other Configuration ---------
max_allowed_packet=4G
performance_schema=OFF
skip_name_resolve
skip_host_cache

#--------- MySQL BinLog activation -------
log-bin=mysql-bin.log
binlog_format=row
server-id=1000

#--------- Logging Configuration ---------
log_error=/var/log/mysql/mysql_error.log
general_log_file=/var/log/mysql/mysql.log
general_log=1
slow_query_log=1
slow_query_log_file=/var/log/mysql/mysql_slow.log
long_query_time=2
log_queries_not_using_indexes=1

#--------- mysql client default settings ------------
[mysql]
default-character-set=utf8

#--------- embedded settings ------------------
[embedded]
datadir=/var/lib/mysql
